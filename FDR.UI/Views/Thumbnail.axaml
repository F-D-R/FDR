<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="160" d:DesignHeight="190"
             x:Class="FDR.UI.Views.Thumbnail">

	<DockPanel Width="160">
		<Border Margin="5" DockPanel.Dock="Top" Height="150" Background="DimGray" BorderBrush="LightGray" BorderThickness="2" CornerRadius="8">
			<Border HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="LightGray" BorderThickness="2">
				<Image MaxWidth="100" MaxHeight="100" Source="{Binding Thumbnail}"/>
			</Border>
		</Border>
		<TextBlock DockPanel.Dock="Bottom" Height="20" Text="{Binding Text}" HorizontalAlignment="Center"/>
	</DockPanel>
</UserControl>
