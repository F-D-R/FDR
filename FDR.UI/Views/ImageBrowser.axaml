<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:FDR.UI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:views="clr-namespace:FDR.UI.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="550"
        x:Class="FDR.UI.ImageBrowser"
        Title="Image Browser"
		MinWidth="300" MaxWidth="300">

	<Design.DataContext>
		<vm:ImageBrowserViewModel/>
	</Design.DataContext>


	<DockPanel Background="Black" LastChildFill="True">
		<Panel DockPanel.Dock="Top" Background="DimGray" Height="20">
			<TextBlock Text="{Binding DirectoryPath}" HorizontalAlignment="Left" Foreground="LightGray"/>
		</Panel>
		<Panel DockPanel.Dock="Bottom" Background="DimGray" Height="100">

		</Panel>
		<WrapPanel Orientation="Horizontal" ClipToBounds="True">
			<views:Thumbnail/>
			<views:Thumbnail/>
			<views:Thumbnail/>
			<views:Thumbnail/>
		</WrapPanel>
	</DockPanel>

</Window>
