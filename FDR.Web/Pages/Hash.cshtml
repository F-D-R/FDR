@page "{handler?}"
@model FDR.Web.Pages.HashModel
@{
    ViewData["Title"] = "Hash";
}
<h1>@ViewData["Title"]</h1>
<hr>

@using (Html.BeginForm(FormMethod.Post))
{
    <div>
        <div asp-validation-summary="All" class="text-danger col-sm-8"></div>
        <div class="row mb-3">
            <label asp-for="Folder" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-8">
                <div class="input-group mb-3">
                    <input asp-for="Folder" class="form-control">
                    <button id="SelectFolder" class="btn btn-outline-secondary" type="button" asp-page-handler="SelectFolder">...</button>
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for="Force" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-8">
                <input asp-for="Force" class="form-check-input va-mid">
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for="Verbose" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-8">
                <input asp-for="Verbose" class="form-check-input va-mid">
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-8 offset-sm-3">
                <button type="submit" class="btn btn-primary"><span class="oi oi-key"></span> @ViewData["Title"]</button><br>
            </div>
        </div>
    </div>
}

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

    <script type="text/javascript">
        $(function () {
            $('#SelectFolder').click(function () {
                // window.open('/Verify', 'CustomerSearch', 'height=' + (window.screen.height - 100) + ',width=200,left=' + (window.screen.width - 250) + ',top=10,status=no,toolbar=no,resizable=yes,scrollbars=yes');
                window.open('/Verify', 'CustomerSearch', 'height=500,width=500,left=' + (window.screen.width / 2 - 250) + ',top=' + (window.screen.Height / 2 - 250) + ',status=no,toolbar=no,resizable=yes,scrollbars=yes');
            });
        });
    </script>
}
