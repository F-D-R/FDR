@page "{handler?}"
@model FDR.Web.Pages.DiffModel
@{
    ViewData["Title"] = "Diff";
}
<h1>@ViewData["Title"]</h1>
<hr>

<form method="post">
    <div>
        <div asp-validation-summary="All" class="text-danger col-sm-8"></div>
        <div class="row mb-3">
            <label asp-for="Folder" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-8">
                <div class="input-group mb-3">
                    <input asp-for="Folder" class="form-control">
                    <button id="SelectFolder" type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#FolderPopup">...</button>
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for="ReferenceFolder" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-8">
                <div class="input-group mb-3">
                    <input asp-for="ReferenceFolder" class="form-control">
                    <button class="btn btn-outline-secondary" type="button" asp-page-handler="SelectReferenceFolder">...</button>
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for="Verbose" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-8">
                <input asp-for="Verbose" class="form-check-input va-mid">
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-8 offset-sm-3">
                <button type="submit" class="btn btn-primary"><span class="oi oi-fork"></span> @ViewData["Title"]</button><br>
            </div>
        </div>
    </div>
</form>

<partial name="_FolderPopup" />

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <partial name="_SelectFolderScriptsPartial" />
}
