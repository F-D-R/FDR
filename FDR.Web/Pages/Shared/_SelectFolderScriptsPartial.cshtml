<script>
    $(function () {
        $('#SelectFolder').on('click', function () {
            $('#source').val('Folder');
            $('#SelectedFolder').val($('#Folder').val());
            $('#Drives').load(`/Folder/Drives?folder=${encodeURIComponent($('#Folder').val())}`);
            $('#Subfolders').load(`/Folder/Subfolders?folder=${encodeURIComponent($('#Folder').val())}`);
        });
    })

    $(function () {
        $('#SaveFolder').on('click', function () {
            $('#' + $('#source').val()).val($('#SelectedFolder').val())
        });
    })
</script>
