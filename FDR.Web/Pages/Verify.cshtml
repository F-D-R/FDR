@page "{handler?}"
@model FDR.Web.Pages.VerifyModel
@{
    ViewData["Title"] = "Verify";
}
<h1>@ViewData["Title"]</h1>
<hr>

@*<form method="post" data-ajax="true" data-ajax-method="post">*@
<form method="post">
    <div>
        <div asp-validation-summary="All" class="text-danger col-sm-8"></div>
        <div class="row mb-3">
            <label asp-for="Folder" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-8">
                <div class="input-group mb-3">
                    <input asp-for="Folder" class="form-control">
                    @*<button id="selectFolder" class="btn btn-outline-secondary" type="button">...</button>*@
                    @*<a class="btn btn-outline-secondary" data-ajax="true" data-ajax-update="#result" data-ajax-url="/ajax">...</a>*@
                    @*<a class="btn btn-outline-secondary" data-ajax="true" data-ajax-update="#result">...</a>*@
                    <a class="btn btn-outline-secondary" data-ajax="true" data-ajax-update="#result" data-ajax-url="/Verify/SelectFolder" data-ajax-method="get">...</a>
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for="Verbose" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-8">
                <input asp-for="Verbose" class="form-check-input va-mid">
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-8 offset-sm-3">
                <button type="submit" class="btn btn-primary"><span class="oi oi-check"></span> @ViewData["Title"]</button><br>
            </div>
        </div>
    </div>
    <br>
    <div id="result"></div>
</form>

