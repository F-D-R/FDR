@page "{handler?}"
@model FDR.Web.Pages.VerifyModel
@{
    ViewData["Title"] = "Verify";
}
<h1>@ViewData["Title"]</h1>
<hr>

<form method="post">
    <div>
        <div asp-validation-summary="All" class="text-danger col-sm-12"></div>
        <div class="row mb-3">
            <partial name="_FolderPopup" model='"Folder"' />
            <label asp-for="Folder" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9">
                <div class="input-group">
                    <input asp-for="Folder" id="Folder" class="form-control">
                    <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#FolderFolderPopup" onclick="FolderSelectFolderClick();"><span class="fa fa-ellipsis"></span></button>
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for="Verbose" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9">
                <input asp-for="Verbose" class="form-check-input va-mid">
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-9 offset-sm-3">
                <button type="submit" class="btn btn-primary"><span class="fa fa-check"></span> @ViewData["Title"]</button><br>
            </div>
        </div>
    </div>
    <br>
    <div id="result"></div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
