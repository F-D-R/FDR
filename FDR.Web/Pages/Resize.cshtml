@page
@model FDR.Web.Pages.ResizeModel
@{
    ViewData["Title"] = "Resize";
}
<h1>@ViewData["Title"]</h1>
<hr>

@using (Html.BeginForm(FormMethod.Post))
{
    <div>
        <div asp-validation-summary="All" class="text-danger col-sm-8"></div>
        @if (Model.AppConfig?.ResizeConfigs != null)
        {
            <div class="row mb-3">
                <label asp-for="ConfigKey" class="col-sm-3 col-form-label">Predefined resize config</label>
                <div class="col-sm-8">
                    <select asp-for="ConfigKey" class="form-select" onchange="location = '?config=' + this.value;">
                        <option value="">Default config...</option>
                        @foreach (var kvp in Model.AppConfig!.ResizeConfigs!)
                        {
                            <option value="@kvp.Key">
                                @kvp.Key
                                @for (int i = 20 - kvp.Key.Length; i > 0; i--)
                                {
                                    @:&nbsp;
                                }
                                (@kvp.Value.ResizeMethod.GetDisplayName() @kvp.Value.MaxWidth x @kvp.Value.MaxHeight)
                            </option>
                        }
                    </select>
                </div>
            </div>
            <hr>
        }
        <div class="row mb-3">
            <label asp-for="ResizeConfig.FileFilter" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-8">
                <input asp-for="ResizeConfig.FileFilter" class="form-control">
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for="ResizeConfig.ResizeMethod" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-8">
                <select asp-for="ResizeConfig.ResizeMethod" asp-items="Html.GetEnumSelectList<ResizeMethod>()" class="form-select"></select>
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for="ResizeConfig.MaxWidth" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-8">
                <input asp-for="ResizeConfig.MaxWidth" class="form-control">
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for="ResizeConfig.MaxHeight" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-8">
                <input asp-for="ResizeConfig.MaxHeight" class="form-control">
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for="ResizeConfig.JpgQuality" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-8">
                <input asp-for="ResizeConfig.JpgQuality" class="form-control">
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for="ResizeConfig.ClearMetadata" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-8">
                <input asp-for="ResizeConfig.ClearMetadata" class="form-check-input va-mid">
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for="ResizeConfig.FilenamePattern" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-8">
                <input asp-for="ResizeConfig.FilenamePattern" class="form-control">
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for="ResizeConfig.FilenameCase" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-8">
                <select asp-for="ResizeConfig.FilenameCase" asp-items="Html.GetEnumSelectList<CharacterCasing>()" class="form-select"></select>
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for="ResizeConfig.ExtensionCase" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-8">
                <select asp-for="ResizeConfig.ExtensionCase" asp-items="Html.GetEnumSelectList<CharacterCasing>()" class="form-select"></select>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-8">
            </div>
        </div>
        <hr>
        <div class="row mb-3">
            <label asp-for="Folder" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-8">
                <div class="input-group mb-3">
                    <input asp-for="Folder" class="form-control">
                    <button class="btn btn-outline-secondary" type="button" asp-page-handler="SelectFolder">...</button>
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for="ResizeConfig.Recursive" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-8">
                <input asp-for="ResizeConfig.Recursive" class="form-check-input va-mid">
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for="ResizeConfig.StopOnError" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-8">
                <input asp-for="ResizeConfig.StopOnError" class="form-check-input va-mid">
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for="Verbose" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-8">
                <input asp-for="Verbose" class="form-check-input va-mid">
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-8 offset-sm-3">
                <input type="submit" value="Resize" class="btn btn-primary"><br>
            </div>
        </div>
    </div>
}

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
