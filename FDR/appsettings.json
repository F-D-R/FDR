{
  "BatchResizeConfigs": {
    "web": {
      "ResizeMethod": "fit_in",
      "MaxWidth": 600,
      "MaxHeight": 600,
      "FileNamePattern": "{name}.web"
    },
    "thumbnail": {
      "ResizeMethod": "fit_in",
      "MaxWidth": 100,
      "MaxHeight": 100,
      "FileNamePattern": "{name}.thumb"
    },
    "tv": {
      "FileFilter": "*.JPG|*.TIF",
      "ResizeMethod": "stretch",
      "MaxWidth": 3840,
      "MaxHeight": 2160,
      "JpgQuality": 100,
      "ClearMetadata": false,
      "FileNamePattern": "{name}tv"
    }
  },
  "BatchRenameConfigs": {
    "RawFDR": {
      "FileNamePattern": "{mdate:yyMMdd}_{counter:3}",
      "AdditionalFileTypes": [ ".JPG" ]
    },
    "RawOli": {
      "FileNamePattern": "Oli_{mdate:yyMMdd}_{counter:3}",
      "AdditionalFileTypes": [ ".JPG" ]
    },
    "test": {
      "FileFilter":  "*.JPG",
      "FileNamePattern": "{name}_{counter:3}"
    }
  },
  "PublishConfigs": {
    "FDR": {
      "SourceRoot": "F:\\FDR\\",
      "DestRoot": "H:\\WEB\\fdr_hu\\www\\",
      "RemoteRoot": "/fdr_hu/www/",
      "PictDirName": "pictures",
      "ThumbDirName": "thumbnails"
    }
  },
  "ImportConfigs": {
    "FDR": {
      "Name": "FDR (EOS R5)",
      "Rules": [
        {
          "Type": "contains_folder",
          "Param": "???CANON"
        },
        {
          "Type": "contains_folder",
          "Param": "CANONMSC"
        }
      ],
      "DestRoot": "F:\\FDR\\",
      "Actions": [
        {
          "ActionType": "rename",
          "BatchRenameConfig": {
            "FileNamePattern": "{mdate:yyMMdd}_{counter:3}",
            "AdditionalFileTypes": [ ".JPG" ]
          },
          "BatchRenameConfigName": "RawFDR"
        },
        {
          "ActionType": "move",
          "MoveConfig": {
            "Filter": "*.CR3|*.CR2|*.CRW",
            "RelativeFolder": "RAW"
          }
        }
      ],
      "BatchRenameConfigs": [
        {
          "FileNamePattern": "{mdate:yyMMdd}_{counter:3}",
          "AdditionalFileTypes": [ ".JPG" ]
        }
      ],
      "MoveConfigs": [
        {
          "FileFilter": "*.CR3|*.CR2|*.CRW",
          "RelativeFolder": "RAW"
        }
      ]
    },
    "FDR_iPhone": {
      "Name": "FDR (iPhone)",
      "Rules": [
        {
          "Type": "contains_folder",
          "Param": "??????__"
        }
      ],
      "DestRoot": "F:\\FDR\\iPhone\\",
      "BatchRenameConfigs": [ { "FileNamePattern": "{mdate:yyMMdd}_{counter:3}" } ]
    },
    "Oli": {
      "Name": "Oli (EOS 6D)",
      "Rules": [
        {
          "Type": "contains_folder",
          "Param": "???CANON"
        },
        {
          "Type": "contains_folder",
          "Param": "EOSMISC"
        }
      ],
      "DestRoot": "F:\\Oli\\",
      "BatchRenameConfigs": [ { "FileNamePattern": "Oli_{mdate:yyMMdd}_{counter:3}" } ],
      "MoveConfigs": [
        {
          "FileFilter": "*.CR3|*.CR2|*.CRW",
          "RelativeFolder": "RAW"
        }
      ]
    }
  }
}