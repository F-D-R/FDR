{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Https": {
        "Url": "https://localhost:7241"
      }
    }
  },
  "ResizeConfigs": {
    "web": {
      "ResizeMethod": "fit_in",
      "MaxWidth": 600,
      "MaxHeight": 600,
      "ClearMetadata": true,
      "FileNamePattern": "web/{name}"
    },
    "thumbnail": {
      "ResizeMethod": "fit_in",
      "MaxWidth": 100,
      "MaxHeight": 100,
      "ClearMetadata": true,
      "FileNamePattern": "thumbnails/{name}_thumb"
    },
    "1920": {
      "ResizeMethod": "fit_in",
      "MaxWidth": 1920,
      "MaxHeight": 1920,
      "FileNamePattern": "1920/{name}s"
    },
    "hd": {
      "ResizeMethod": "fit_in",
      "MaxWidth": 1920,
      "MaxHeight": 1080,
      "FileNamePattern": "HD/{name}s"
    },
    "3840": {
      "ResizeMethod": "fit_in",
      "MaxWidth": 3840,
      "MaxHeight": 3840,
      "FileNamePattern": "3840/{name}s"
    },
    "4k": {
      "ResizeMethod": "fit_in",
      "MaxWidth": 3840,
      "MaxHeight": 2160,
      "FileNamePattern": "4K/{name}s"
    },
    "insta": {
      "ResizeMethod": "fit_in",
      "MaxWidth": 1080,
      "MaxHeight": 1350,
      "ClearMetadata": true,
      "FileNamePattern": "instagram/{name}s"
    },
    "tv": {
      "FileFilter": "*.JPG|*.TIF",
      "ResizeMethod": "stretch",
      "MaxWidth": 3840,
      "MaxHeight": 2160,
      "JpgQuality": 99,
      "FileNamePattern": "TV/{name}tv"
    }
  },
  "RenameConfigs": {
    "RawFDR": {
      "FileFilter": "*.*",
      "FileNamePattern": "{edate:yyMMdd}_{counter:auto}"
    },
    "RawOli": {
      "FileFilter": "*.*",
      "FileNamePattern": "Oli_{edate:yyMMdd}_{counter:auto}"
    },
    "MSE": {
      "FileFilter": "*.*",
      "FileNamePattern": "MSE_{edate:yyMMdd}_{counter:auto}"
    },
    "exif": {
      "FileFilter": "*.*",
      "FileNamePattern": "{edate:yyMMdd}_{edate:HHmmss}",
      "Recursive": true,
      "StopOnError": false
    },
    "lower": {
      "FileFilter": "*.*",
      "FileNamePattern": "{name}",
      "FilenameCase": "lower",
      "ExtensionCase": "lower",
      "Recursive": true,
      "StopOnError": false
    },
    "lower_ext": {
      "FileFilter": "*.*",
      "FileNamePattern": "{name}",
      "FilenameCase": "unchanged",
      "ExtensionCase": "lower",
      "Recursive": true,
      "StopOnError": false
    },
    "riker": {
      "FileFilter": "*.*",
      "FileNamePattern": "{edate:yyMMdd}_{counter:auto}"
    }
  },
  "MoveConfigs": {
    "raw": {
      "FileFilter": "*.CR3|*.CR2|*.CRW|*.DNG",
      "RelativeFolder": "RAW"
    }
  },
  "PublishConfigs": {
    "FDR": {
      "SourceRoot": "F:\\FDR\\",
      "DestRoot": "H:\\WEB\\fdr_hu\\www\\",
      "RemoteRoot": "/fdr_hu/www/",
      "PictDirName": "pictures",
      "ThumbDirName": "thumbnails"
    }
  },
  "ImportConfigs": {
    "fdr": {
      "Name": "FDR (EOS R5)",
      "Rules": [
        {
          "Type": "contains_folder",
          "Param": "???CANON"
        },
        {
          "Type": "contains_folder",
          "Param": "CANONMSC"
        }
      ],
      "DestRoot": "F:\\FDR\\",
      "DestStructure": "year_date",
      "DateFormat": "yyMMdd",
      "Actions": [
        {
          "Type": "rename",
          "Config": "RawFDR"
        },
        {
          "Type": "move",
          "Config": "raw"
        }
      ]
    },
    "dji": {
      "Name": "FDR (DJI)",
      "Rules": [
        {
          "Type": "contains_folder",
          "Param": "100MEDIA"
        }
      ],
      "DestRoot": "F:\\FDR\\",
      "DestStructure": "year_date",
      "DateFormat": "yyMMdd",
      "Actions": [
        {
          "Type": "rename",
          "Config": "RawFDR"
        },
        {
          "Type": "move",
          "Config": "raw"
        }
      ]
    },
    "iphone": {
      "Name": "FDR (iPhone)",
      "Rules": [
        {
          "Type": "contains_folder",
          "Param": "??????__"
        }
      ],
      "DestRoot": "F:\\FDR\\iPhone\\",
      "DestStructure": "year_date",
      "DateFormat": "yyMMdd",
      "Actions": [
        {
          "Type": "rename",
          "Config": "RawFDR"
        }
      ]
    },
    "oli": {
      "Name": "Oli (EOS 6D)",
      "Rules": [
        {
          "Type": "contains_folder",
          "Param": "???CANON"
        },
        {
          "Type": "contains_folder",
          "Param": "EOSMISC"
        }
      ],
      "DestRoot": "F:\\Oli\\",
      "DestStructure": "year_date",
      "DateFormat": "yyMMdd",
      "Actions": [
        {
          "Type": "rename",
          "Config": "RawOli"
        },
        {
          "Type": "move",
          "Config": "raw"
        }
      ]
    },
    "riker": {
      "Name": "Riker (EOS 5D Mark IV)",
      "Rules": [
        {
          "Type": "contains_folder",
          "Param": "???CANON"
        },
        {
          "Type": "contains_folder",
          "Param": "MISC"
        }
      ],
      "DestRoot": "F:\\fdrtmp\\",
      "DestStructure": "year_month",
      "DateFormat": "yyMMdd",
      "Actions": [
        {
          "Type": "rename",
          "Config": "RawFDR"
        },
        {
          "Type": "move",
          "Config": "raw"
        }
      ]
    }
  }
}