{
  "BatchResizeConfigs": {
    "web": {
      "ResizeMethod": "fit_in",
      "MaxWidth": 600,
      "MaxHeight": 600,
      "FileNamePattern": "{name}.web"
    },
    "thumbnail": {
      "ResizeMethod": "fit_in",
      "MaxWidth": 100,
      "MaxHeight": 100,
      "FileNamePattern": "{name}.thumb"
    },
    "1920": {
      "ResizeMethod": "fit_in",
      "MaxWidth": 1920,
      "MaxHeight": 1920,
      "FileNamePattern": "{name}s"
    },
    "hd": {
      "ResizeMethod": "fit_in",
      "MaxWidth": 1920,
      "MaxHeight": 1080,
      "FileNamePattern": "{name}s"
    },
    "3840": {
      "ResizeMethod": "fit_in",
      "MaxWidth": 3840,
      "MaxHeight": 3840,
      "FileNamePattern": "{name}s"
    },
    "4k": {
      "ResizeMethod": "fit_in",
      "MaxWidth": 3840,
      "MaxHeight": 2160,
      "FileNamePattern": "{name}s"
    },
    "tv": {
      "FileFilter": "*.JPG|*.TIF",
      "ResizeMethod": "stretch",
      "MaxWidth": 3840,
      "MaxHeight": 2160,
      "JpgQuality": 99,
      "ClearMetadata": false,
      "FileNamePattern": "{name}tv"
    }
  },
  "RenameConfigs": {
    "RawFDR": {
      "FileNamePattern": "{mdate:yyMMdd}_{counter:3}",
      "AdditionalFileTypes": [ ".JPG" ]
    },
    "RawOli": {
      "FileNamePattern": "Oli_{mdate:yyMMdd}_{counter:3}",
      "AdditionalFileTypes": [ ".JPG" ]
    }
  },
  "BatchRenameConfigs": {
    "yymmdd_ccc": {
      "FileNamePattern": "{mdate:yyMMdd}_{counter:3}",
      "AdditionalFileTypes": [ ".JPG" ],
      "Recursive": false,
      "StopOnError": true
    },
    "RawFDR": {
      "FileNamePattern": "{mdate:yyMMdd}_{counter:3}",
      "AdditionalFileTypes": [ ".JPG" ],
      "Recursive": false,
      "StopOnError": true
    },
    "RawOli": {
      "FileNamePattern": "Oli_{mdate:yyMMdd}_{counter:3}",
      "AdditionalFileTypes": [ ".JPG" ],
      "Recursive": false,
      "StopOnError": true
    },
    "MSE": {
      "FileNamePattern": "MSE_{edate:yyMMdd}_{counter:3}",
      "AdditionalFileTypes": [ ".JPG" ],
      "Recursive": false,
      "StopOnError": true
    },
    "exif": {
      "FileFilter": "*.CR3|*.CR2|*.CRW|*.MP4|*.AVI|*.MOV|*.JPG",
      "FileNamePattern": "{edate:yyMMdd}_{edate:HHmmss}",
      "AdditionalFileTypes": [ ".JPG" ],
      "Recursive": true,
      "StopOnError": false
    },
    "test": {
      "FileFilter": "*.JPG",
      "FileNamePattern": "{name}_{counter:3}",
      "Recursive": false,
      "StopOnError": true
    },
    "lower": {
      "FileFilter": "*.JPG",
      "FileNamePattern": "{name}",
      "FilenameCase": "lower",
      "ExtensionCase": "lower",
      "AdditionalFileTypes": [],
      "Recursive": true,
      "StopOnError": false
    },
    "lower_ext": {
      "FileFilter": "*.JPG",
      "FileNamePattern": "{name}",
      "FilenameCase": "unchanged",
      "ExtensionCase": "lower",
      "AdditionalFileTypes": [],
      "Recursive": true,
      "StopOnError": false
    },
    "riker": {
      "FileFilter": "*.CR2",
      "FileNamePattern": "{mdate:yyMMdd}_{counter:3}",
      "FilenameCase": "unchanged",
      "ExtensionCase": "lower",
      "AdditionalFileTypes": [ ".XMP" ],
      "Recursive": true,
      "StopOnError": false
    }
  },
  "MoveConfigs": {
    "raw": {
      "FileFilter": "*.CR3|*.CR2|*.CRW",
      "RelativeFolder": "RAW"
    }
  },
  "PublishConfigs": {
    "FDR": {
      "SourceRoot": "F:\\FDR\\",
      "DestRoot": "H:\\WEB\\fdr_hu\\www\\",
      "RemoteRoot": "/fdr_hu/www/",
      "PictDirName": "pictures",
      "ThumbDirName": "thumbnails"
    }
  },
  "ImportConfigs": {
    "fdr": {
      "Name": "FDR (EOS R5)",
      "Rules": [
        {
          "Type": "contains_folder",
          "Param": "???CANON"
        },
        {
          "Type": "contains_folder",
          "Param": "CANONMSC"
        }
      ],
      "DestRoot": "F:\\FDR\\",
      "Actions": [
        {
          "Type": "rename",
          "Config": "yymmdd_ccc"
        },
        {
          "Type": "move",
          "Config": "raw"
        }
      ],
      "BatchRenameConfigs": [
        {
          "FileNamePattern": "{mdate:yyMMdd}_{counter:3}",
          "AdditionalFileTypes": [ ".JPG" ]
        }
      ],
      "MoveConfigs": [
        {
          "FileFilter": "*.CR3|*.CR2|*.CRW",
          "RelativeFolder": "RAW"
        }
      ]
    },
    "iphone": {
      "Name": "FDR (iPhone)",
      "Rules": [
        {
          "Type": "contains_folder",
          "Param": "??????__"
        }
      ],
      "DestRoot": "F:\\FDR\\iPhone\\",
      "BatchRenameConfigs": [ { "FileNamePattern": "{mdate:yyMMdd}_{counter:3}" } ]
    },
    "oli": {
      "Name": "Oli (EOS 6D)",
      "Rules": [
        {
          "Type": "contains_folder",
          "Param": "???CANON"
        },
        {
          "Type": "contains_folder",
          "Param": "EOSMISC"
        }
      ],
      "DestRoot": "F:\\Oli\\",
      "BatchRenameConfigs": [ { "FileNamePattern": "Oli_{mdate:yyMMdd}_{counter:3}" } ],
      "MoveConfigs": [
        {
          "FileFilter": "*.CR3|*.CR2|*.CRW",
          "RelativeFolder": "RAW"
        }
      ]
    }
  }
}